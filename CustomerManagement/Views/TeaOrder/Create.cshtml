
@model CustomerManagement.ViewModels.TeaOrderViewModel
@{
}

<h1>Create Order</h1>

<form asp-controller="TeaOrder" asp-action="SaveCreate">
    <div class="form-group" hidden>
        <label asp-for="Id"></label>
        <text asp-for="Id">
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="TotalPrice"></label>
        <input asp-for="TotalPrice" class="form-control">
    </div>
    <div class="form-group">
        <label>Customer :</label>
        <select asp-for="CustomerId"
                asp-items="Model.CustomerSelections" class="form-control">
            <option>Please select one customer</option>
        </select>
    </div>
    <div class="form-group">
        <label>Products :</label>
        <select class="form-control" id="TeaIds" multiple="multiple" asp-items="Model.Teas" asp-for="TeaIds" name="TeaIds">
            <option>Please select one customer</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
