@model CustomerManagement.ViewModels.OrderViewModel;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Order</h1>

<form asp-controller="Order" asp-action="SaveNew">
    <div asp-validation-summary="All" class="text-danger"></div>
    @*<div hidden>
            <label asp-for="Id"></label>
            <text asp-for="Id">
        </div>*@
    <div class="form-group">
        <label asp-for="NumberOfOrder"></label>
        <input asp-for="NumberOfOrder" class="form-control">
        @*<span asp-validation-for="Name" class="text-danger"></span>*@
    </div>
    <div class="form-group">
        <label asp-for="PurchaseDate"></label>
        <input asp-for="PurchaseDate" class="form-control">
        @*<span asp-validation-for="Name" class="text-danger"></span>*@
    </div>
   
    <div class="form-group">
        <label>Pruducts :</label>
        <select class="form-control" asp-for="ProductIds" multiple="multiple"
                asp-items="Model.ProductSelection">
            <option>Please select one customer</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
